    <script>
        // ============================================
        // EDIT YOUR ITEMS HERE - Easy to manage!
        // ============================================
        const items = [
            {
                name: "Rustic Coffee Table",
                description: "Beautiful handcrafted coffee table made from reclaimed oak. Features natural wood grain and a smooth finish.",
                price: 350,
                image: "ðŸª‘" // You can replace with image URL later
            },
            {
                name: "Cutting Board Set",
                description: "Set of 3 premium cutting boards in various sizes. Made from maple and walnut with food-safe finish.",
                price: 75,
                image: "ðŸ”ª"
            },
            {
                name: "Wall Mounted Shelf",
                description: "Elegant floating shelf perfect for any room. Sturdy construction with hidden mounting hardware.",
                price: 120,
                image: "ðŸ“š"
            },
            {
                name: "Wooden Box",
                description: "Decorative wooden box with brass hinges. Perfect for jewelry, keepsakes, or desk organization.",
                price: 45,
                image: "ðŸ“¦"
            },
            {
                name: "Custom Desk Organizer",
                description: "Multi-compartment desk organizer to keep your workspace tidy. Made from cherry wood.",
                price: 65,
                image: "âœï¸"
            },
            {
                name: "Serving Tray",
                description: "Large serving tray with handles. Perfect for entertaining guests or breakfast in bed.",
                price: 85,
                image: "ðŸ½ï¸"
            }
        ];
        // ============================================

        const modal = document.getElementById('purchaseModal');
        const closeBtn = document.querySelector('.close');
        const form = document.getElementById('purchaseForm');
        const successMessage = document.getElementById('successMessage');

        function displayItems() {
            const grid = document.getElementById('itemsGrid');
            grid.innerHTML = items.map((item, index) => `
                <div class="item-card" onclick="openPurchaseModal('${item.name}', ${item.price})">
                    <div class="item-image">${item.image}</div>
                    <div class="item-details">
                        <h3 class="item-name">${item.name}</h3>
                        <p class="item-description">${item.description}</p>
                        <div class="item-footer">
                            <span class="item-price">$${item.price}</span>
                            <button class="purchase-btn" onclick="event.stopPropagation(); openPurchaseModal('${item.name}', ${item.price})">
                                Request Purchase
                            </button>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        function openPurchaseModal(itemName, itemPrice) {
            document.getElementById('itemName').value = itemName;
            document.getElementById('itemPrice').value = itemPrice;
            document.querySelector('.modal h2').textContent = `Request to Purchase: ${itemName}`;
            modal.style.display = 'block';
        }

        closeBtn.onclick = function() {
            modal.style.display = 'none';
            form.reset();
            successMessage.style.display = 'none';
        }

        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = 'none';
                form.reset();
                successMessage.style.display = 'none';
            }
        }

        form.onsubmit = function(e) {
            e.preventDefault();
            
            const formData = new FormData(form);
            const data = Object.fromEntries(formData);
            
            const subject = `Purchase Request: ${data.itemName}`;
            const body = `
New Purchase Request

Item: ${data.itemName}
Price: $${data.itemPrice}

Customer Information:
Name: ${data.customerName}
Email: ${data.customerEmail}
Phone: ${data.customerPhone || 'Not provided'}

Message:
${data.message || 'No additional message'}
            `.trim();

            const mailtoLink = `mailto:jalen@mcg-works.com?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
            window.location.href = mailtoLink;

            successMessage.style.display = 'block';
            
            setTimeout(() => {
                modal.style.display = 'none';
                form.reset();
                successMessage.style.display = 'none';
            }, 3000);
        };

        displayItems();
    </script>
</body>
